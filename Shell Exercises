# input intergers and display results
read int1
read int2

echo $((int1 + int2))
echo $((int1 - int2))
echo $((int1 * int2))
echo $((int1 / int2))


read x
read y
if [ $x -gt $y ]
then
        echo "X is greater than Y"

elif [ $x -lt $y ]
then
        echo "X is less than Y"

else
        echo "X is equal to Y"
fi
